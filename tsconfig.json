{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es2016",
            "dom"
        ],
        "target": "es2016",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "views/**/*",
        "public/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}