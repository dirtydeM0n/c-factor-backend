{
  "name": "cryptobounce-backend",
  "version": "0.1.0",
  "description": "A starting point for Node.js REST API",
  "repository": {
    "type": "git",
    "url": "https://github.com/maljukan/typescript-node-rest-starter"
  },
  "author": "Nenad Maljukan",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run serve",
    "build:clean": "rm -rf dist",
    "build": "npm run build:clean && npm run build-ts && npm run tslint",
    "serve": "node --inspect dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "async": "^2.6.1",
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "connect-mongo": "^2.0.3",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-jwt": "^5.3.0",
    "express-session": "^1.15.6",
    "express-validator": "^4.3.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "lusca": "^1.6.1",
    "mongoose": "^4.13.17",
    "morgan": "^1.9.1",
    "nodemailer": "^4.7.0",
    "request": "^2.88.0",
    "swagger-ui-express": "^3.0.10"
  },
  "devDependencies": {
    "@types/async": "^2.0.50",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/bluebird": "^3.5.25",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "0.0.33",
    "@types/connect-mongo": "0.0.34",
    "@types/dotenv": "^4.0.3",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.0",
    "@types/express-jwt": "0.0.38",
    "@types/express-session": "^1.15.11",
    "@types/jest": "^21.1.8",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/lodash": "^4.14.119",
    "@types/lusca": "^1.5.0",
    "@types/mongodb": "^2.2.23",
    "@types/mongoose": "^4.7.40",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.10.2",
    "@types/nodemailer": "^1.3.32",
    "@types/request": "^2.48.1",
    "@types/shelljs": "^0.7.9",
    "@types/supertest": "^2.0.7",
    "chai": "^4.2.0",
    "concurrently": "^3.6.1",
    "jest": "^21.2.1",
    "nodemon": "^1.18.9",
    "shelljs": "^0.7.7",
    "supertest": "^3.3.0",
    "ts-jest": "^21.2.4",
    "ts-node": "^4.0.2",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2"
  }
}
