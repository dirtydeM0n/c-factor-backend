{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "C-Factor Backend REST API",
    "description": "C-Factor Backend REST API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Auth",
      "description": "API for authorization/authenticating users in the system"
    },
    {
      "name": "Users",
      "description": "API for users in the system"
    },
    {
      "name": "Clients",
      "description": "API for clients in the system"
    },
    {
      "name": "Companies",
      "description": "API for companies in the system"
    },
    {
      "name": "Departments",
      "description": "API for departments in the system"
    },
    {
      "name": "Roles",
      "description": "API for roles in the system"
    },
    {
      "name": "Avatars",
      "description": "API for avatars in the system"
    },
    {
      "name": "Campaigns",
      "description": "API for campaigns in the system"
    },
    {
      "name": "CampaignInvites",
      "description": "API for campaign invites in the system"
    }
  ],
  "securityDefinitions": {
    "Bearer": {
      "name": "Authorization",
      "description": "API Token",
      "type": "apiKey",
      "in": "header"
    }
  },
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Register new user in system",
        "description": "Register new user in system",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New user is created",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/auth/activate/{ACTIVATION_TOKEN}": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Activate user",
        "parameters": [
          {
            "name": "ACTIVATION_TOKEN",
            "in": "path",
            "required": true,
            "description": "ACTIVATION_TOKEN for user",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "User Login",
        "description": "Login user in system",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "required": [
                "email",
                "password"
              ],
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "User logged in successfully.",
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": [
          "Users"
        ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "summary": "Get users",
        "responses": {
          "200": {
            "description": "List of users",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Users": {
      "type": "array",
      "$ref": "#/definitions/User"
    },
    "Clients": {
      "type": "array",
      "$ref": "#/definitions/Client"
    },
    "Avatars": {
      "type": "array",
      "$ref": "#/definitions/Avatar"
    },
    "Roles": {
      "type": "array",
      "$ref": "#/definitions/Role"
    },
    "Companies": {
      "type": "array",
      "$ref": "#/definitions/Company"
    },
    "Departments": {
      "type": "array",
      "$ref": "#/definitions/Department"
    },
    "User": {
      "required": [
        "email",
        "password"
      ],
      "optional": [
        "username"
      ],
      "properties": {
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "password": {
          "type": "string"
        },
        "username": {
          "type": "string"
        }
      }
    },
    "UserProfile": {
      "required": [
        "firstname"
      ],
      "optional": [
        "lastname",
        "phone",
        "dob",
        "education",
        "specialization",
        "city",
        "region",
        "country",
        "address",
        "bio"
      ],
      "properties": {
        "lastname": {
          "type": "string"
        },
        "firstname": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "dob": {
          "type": "string"
        },
        "education": {
          "type": "string"
        },
        "specialization": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "region": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "bio": {
          "type": "string"
        }
      }
    },
    "Avatar": {
      "required": [
        "gender",
        "color"
      ],
      "properties": {
        "gender": {
          "type": "string"
        },
        "color": {
          "type": "string"
        }
      }
    },
    "Role": {
      "required": [
        "name",
        "value"
      ],
      "properties": {
        "name": {
          "type": "string",
          "uniqueItems": true
        },
        "value": {
          "type": "string",
          "uniqueItems": true
        }
      }
    },
    "Client": {
      "required": [
        "userId",
        "email",
        "name",
        "phone",
        "avatar",
        "bio"
      ],
      "properties": {
        "userId": {
          "type": "string",
          "uniqueItems": true
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "name": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "avatar": {
          "type": "string"
        },
        "bio": {
          "type": "string"
        }
      }
    },
    "Department": {
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "uniqueItems": true
        }
      }
    },
    "Company": {
      "required": [
        "name",
        "website",
        "industry_type",
        "bio"
      ],
      "properties": {
        "name": {
          "type": "string",
          "uniqueItems": true
        },
        "website": {
          "type": "string",
          "uniqueItems": true
        },
        "industry_type": {
          "type": "string"
        },
        "bio": {
          "type": "string",
          "uniqueItems": true
        }
      }
    },
    "UnAuthorized": {
      "properties": {
        "msg": {
          "type": "array",
          "items": {
            "properties": {
              "location": {
                "type": "string"
              },
              "param": {
                "type": "string"
              },
              "msg": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}